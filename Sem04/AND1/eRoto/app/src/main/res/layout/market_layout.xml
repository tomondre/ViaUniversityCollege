<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/market_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPX50"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/market_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market_ticker"
        android:layout_marginTop="0dp"
        android:gravity="top"
        android:text="4453.57"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/market_difference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market_current_price"
        android:layout_marginTop="0dp"
        android:gravity="bottom"
        android:text="-0.40%"
        android:textColor="#C31F1F"
        android:textSize="12sp" />
</RelativeLayout>